{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@fm/common": ["common"],
      "@fm/hooks": ["renderer/hooks"],
      "@fm/components": ["renderer/components"],
      "@fm/store": ["renderer/store"]
    },
    "sourceMap": true
  },
  "exclude": ["_templates", "dist", "build"]
}
