{
  "name": "electron_file_manager",
  "version": "0.0.1",
  "description": "File manager using electron, react, typescript",
  "main": "./dist/main.js",
  "scripts": {
    "start": "npm-run-all build:ts --parallel start:*",
    "start:ts": "run-p start:ts:*",
    "start:ts:main": "webpack --config ./webpack.main.ts --mode development --watch",
    "start:ts:renderer": "webpack --config ./webpack.renderer.ts --mode development --watch",
    "start:app": "electron ./dist/main.js",
    "build": "run-s build:*",
    "build:clean": "cf dist",
    "build:ts": "run-p build:ts:*",
    "build:ts:main": "webpack --config ./webpack.main.ts --mode production",
    "build:ts:renderer": "webpack --config ./webpack.renderer.ts --mode production",
    "tsc": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx --ignore-path ./.gitignore --max-warnings 0 \"**/*.{ts,tsx}\"",
    "format": "prettier --ignore-path ./.gitignore --list-different \"**/*.{css,html,js,json,jsx,less,md,scss,ts,tsx,vue,yaml,yml}\" --write",
    "pack:win": "yarn build && electron-builder --win",
    "pack:linux": "yarn build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "commit": "cz"
  },
  "build": {
    "appId": "com.electron.filemanager",
    "files": "dist/**/*",
    "directories": {
      "output": "build/"
    }
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "author": "Andrey Kiselev",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/bunyan": "^1.8.6",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/mousetrap": "^1.6.3",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-file-icon": "^1.0.0",
    "@types/react-modal": "^3.10.6",
    "@types/styled-components": "^5.1.3",
    "@types/testing-library__react-hooks": "^3.4.0",
    "@types/webpack": "^4.41.22",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "css-loader": "^4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-webpack": "^2.0.0",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "electron-debug": "^3.1.0",
    "electron-reload": "^1.5.0",
    "eslint": "^7.8.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.4.1",
    "hygen-templates": "https://github.com/TheAsda/hygen-templates",
    "jest": "^26.4.2",
    "node-loader": "1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "react-test-renderer": "^16.13.1",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.3"
  },
  "dependencies": {
    "@sentry/electron": "^2.0.0",
    "autobind-decorator": "^2.4.0",
    "clear-folder": "^2.0.0",
    "effector": "^21.2.2",
    "effector-react": "^21.0.4",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.0",
    "filemancore": "^1.1.10",
    "fuse.js": "^6.4.1",
    "lodash": "^4.17.20",
    "node-pty": "^0.9.0",
    "rc-resize-observer": "^0.2.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-file-icon": "^1.0.0",
    "react-hotkeys": "^2.0.0",
    "react-responsive-modal": "^5.1.0",
    "react-toastify": "^6.0.8",
    "react-zoom-pan-pinch": "^1.6.1",
    "styled-components": "^5.2.0",
    "trash": "^6.1.1",
    "xterm": "^4.8.1",
    "xterm-addon-fit": "^0.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
